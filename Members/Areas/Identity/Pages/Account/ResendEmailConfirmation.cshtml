@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Send email confirmation";   
}

<head>
    <title>@ViewData["Title"]</title>
</head>

<!-- Banner Logo -->
<partial name="_PartialBannerLogo" />

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded m-0 p-0 bg-Card-Menu">
                <div class="card-body p-2">

                    <!-- Title -->
                    <h1 class="text-center mb-4 text-gold-darker">
                        <i class="bi bi-envelope-check-fill"></i> @ViewData["Title"]
                    </h1>

                    <!-- Subtitle -->
                    <h4 class="text-center mb-2 text-gold-darker">Enter email address:</h4>

                    <!-- Resend Email Confirmation Form -->
                    <form method="post">

                        <!-- Alert -->
                        <div asp-validation-summary="All" class="text-danger text-center" role="alert"></div>

                        <!-- Email field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">

                            <!-- Cancel -->
                            <a href="~/" class="btn btn-sm btn-secondary me-2" title="Discard Changes and Return Home">
                                <i class="bi bi-box-arrow-left"></i> Cancel
                            </a>

                            <!-- Send -->                            
                            <button type="submit" class="btn btn-sm btn-primary">
                                <i class="bi bi-arrow-clockwise"></i> Send
                            </button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
