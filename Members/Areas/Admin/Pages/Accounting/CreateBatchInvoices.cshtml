@page
@model Members.Areas.Admin.Pages.Accounting.CreateBatchInvoicesModel
@{
    ViewData["Title"] = "Create Batch Assessment Invoices";
    Layout = "/Views/Shared/_Layout.cshtml"; // Or your preferred admin layout
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-dark">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Use this form to generate a batch of draft assessment invoices (e.g., for annual dues)
                        for all members designated as 'Billing Contact'. These invoices will be created with a 'Draft'
                        status and can be reviewed and finalized before they become active.
                    </p>
                    <hr />

                    @if (TempData["StatusMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Html.Raw(TempData["StatusMessage"]?.ToString()?.Replace("\n", "<br />"))
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Html.Raw(TempData["ErrorMessage"]?.ToString()?.Replace("\n", "<br />"))
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label"></label>
                            <input asp-for="Input.Description" class="form-control" />
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <label asp-for="Input.AmountDue" class="form-label"></label>
                                <input asp-for="Input.AmountDue" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Input.AmountDue" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <label asp-for="Input.InvoiceDate" class="form-label"></label>
                                <input asp-for="Input.InvoiceDate" class="form-control" type="date" />
                                <span asp-validation-for="Input.InvoiceDate" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="Input.DueDate" class="form-label"></label>
                                <input asp-for="Input.DueDate" class="form-control" type="date" />
                                <span asp-validation-for="Input.DueDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-files"></i> Create Draft Invoice Batch
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
