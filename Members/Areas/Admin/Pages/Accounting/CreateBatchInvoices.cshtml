@page
@model Members.Areas.Admin.Pages.Accounting.CreateBatchInvoicesModel
@{
    ViewData["Title"] = "Create Draft Batch Invoices";
    Layout = "/Views/Shared/_Layout.cshtml"; // Or your preferred admin layout
}

<div class="container my-4">

    <!-- Title -->
    <div class="mb-3 text-center">
        <h3 class="text-blackish mb-0"><i class="bi bi-plus-square"></i> @ViewData["Title"]</h3>
    </div>

    <!-- Back to Manage Batch Invoices Button -->
    <div class="my-3 text-center">
        <a class="btn btn-sm btn-back rounded-4 shadow" href=".\reviewbatchinvoices"><i class="bi bi-arrow-left"></i> Back to Review batch Invoices</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card bg-card-light rounded shadow">
                
                <div class="card-body">
                    <p class="card-text text-blackish mb-2">
                        Use this form to generate a batch of draft assessment invoices (e.g., for monthly assessments)
                        for all <strong>billable assets</strong> that have an assigned billing contact. 
                        One invoice will be created per asset.
                    </p>
                    @if (Model.ActionableBillableAssetsCount > 0)
                    {
                        <p class="bg-blue-lighter text-blackish mb-2 rounded p-2">
                            Currently, there are <strong>@Model.ActionableBillableAssetsCount</strong> billable asset(s) with assigned contacts that will be processed. The specific 'Assessment Fee' set for each individual asset will be used to determine the amount for each invoice.
                        </p>
                    }
                    else
                    {
                        <p class="alert alert-warning">
                            There are currently no billable assets with assigned billing contacts. No invoices will be generated by this batch.
                            Please <a asp-page="./ManageBillableAssets">assign contacts to assets</a> first.
                        </p>
                    }
                    <p class="card-text text-blackish">
                        These invoices will be created with a 'Draft' status and can be reviewed and finalized 
                        via the 'Review Draft Batches' page before they become active.
                    </p>
                    <hr />

                    @if (TempData["StatusMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Html.Raw(TempData["StatusMessage"]?.ToString()?.Replace("\n", "<br />"))
                            <button type="button" class="btn-close shadow" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Html.Raw(TempData["ErrorMessage"]?.ToString()?.Replace("\n", "<br />"))
                            <button type="button" class="btn-close shadow" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label text-blackish ms-2"></label>
                            <input asp-for="Input.Description" class="form-control text-blackish shadow" />
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-6 mb-3">
                                <label asp-for="Input.InvoiceDate" class="form-label text-blackish ms-2"></label>
                                <input asp-for="Input.InvoiceDate" class="form-control text-blackish shadow" type="date" />
                                <span asp-validation-for="Input.InvoiceDate" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="Input.DueDate" class="form-label text-blackish ms-2"></label>
                                <input asp-for="Input.DueDate" class="form-control text-blackish shadow" type="date" />
                                <span asp-validation-for="Input.DueDate" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Create a Batch Invoice Btton -->
                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-sm btn-success rounded-4 shadow">
                                <i class="bi bi-files"></i> Create a Draft Invoice Batch
                            </button>
                        </div>                       
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
