@page "{invoiceId:int}"
@model EditInvoiceModel
@{
    ViewData["Title"] = "Edit Invoice";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Edit invoice details.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Input.DueDate"></label>
                <input asp-for="Input.DueDate" class="form-control" />
                <span asp-validation-for="Input.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Description"></label>
                <input asp-for="Input.Description" class="form-control" />
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.AmountDue"></label>
                <input asp-for="Input.AmountDue" class="form-control" />
                <span asp-validation-for="Input.AmountDue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Status"></label>
                <input asp-for="Input.Status" class="form-control" />
                <span asp-validation-for="Input.Status" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="@Model.ReturnUrl" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
