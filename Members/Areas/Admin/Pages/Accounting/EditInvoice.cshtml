@page "{invoiceId:int}"
@model EditInvoiceModel
@{
    ViewData["Title"] = "Edit Invoice";
    Layout = "_Layout"; // Or your specific Member Area layout
}

<h2 class="mt-4 text-center text-gold-darker"><i class="bi bi-pencil-square"></i>  @ViewData["Title"]</h2>

<div class="container my-4">
    <div class="row justify-content-center">

        <div class="col-md-8 col-lg-6">

            <div class="shadow card m-1 p-2 bg-Card-Menu">
                <form method="post">

                    <h4 class="text-gold-darker ms-2">Invoice details:</h4>
                    
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div class="mt-0 form-group text-gold-darker">
                        <label asp-for="Input.DueDate" class="ms-2 text-gold-darker"></label>
                        <input asp-for="Input.DueDate" class="shadow form-control text-gold-darker" />
                        <span asp-validation-for="Input.DueDate" class="text-danger"></span>
                    </div>
                    <div class="mt-3 form-group text-gold-darker">
                        <label asp-for="Input.Description" class="ms-2 text-gold-darker"></label>
                        <input asp-for="Input.Description" class="shadow form-control text-gold-darker" />
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    <div class="mt-3 form-group">
                        <label asp-for="Input.AmountDue" class="ms-2 text-gold-darker"></label>
                        <input asp-for="Input.AmountDue" class="shadow form-control text-gold-darker" />
                        <span asp-validation-for="Input.AmountDue" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Status" hidden class="ms-2 text-gold-darker"></label>
                        <input asp-for="Input.Status" hidden class="shadow form-control text-gold-darker" />
                        <span asp-validation-for="Input.Status" class="text-danger"></span>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-6 text-start">
                            <a href="@Model.ReturnUrl" class="mt-3 mb-2 shadow btn btn-sm btn-secondary">Cancel</a>
                        </div>
                        <div class="col-6 text-end">
                            <button type="submit" class="mt-3 mb-2 shadow btn btn-sm btn-success">Save Changes</button>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
