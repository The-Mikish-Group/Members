@model IEnumerable<Members.Models.PDFCategory>

@{
    ViewData["Title"] = "PDF Categories"; // This will be set in the controller, but good practice to have a default
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your main layout
}

<div class="text-blackish mb-2 mt-4 text-center">
    <h1><i class="bi bi-file-earmark-pdf-fill text-blackish me-0"></i> @ViewData["Title"]</h1>
</div>

<div class="row justify-content-center container mx-auto p-1">
    <div class="col-lg-6 col-md-10 m-1 p-1">
        <div class="card bg-card-light rounded border shadow">
            <div class="card-body p-0">
                @if (Model != null && Model.Any())
                {
                    <ul class="list-group list-group-flush">
                    @foreach (var category in Model)
                    {
                        <li class="list-group-item text-blackish bg-transparent" style="cursor: pointer;">
                            <a asp-controller="Members" asp-action="ListFiles" asp-route-categoryId="@category.CategoryID" class="text-decoration-none text-blackish d-block">
                                    <i class="bi bi-list-ul text-blackish me-0"></i> @category.CategoryName
                            </a>
                        </li>
                    }
                    </ul>
                }
                else
                {
                    <p class="text-blackish mt-0 pt-0 text-center">No categories with files found.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
        <style>
            /* Styles to remove the borders from the list items */
            .card-body .list-group-item {
                border-bottom: none !important;
            }
             .card-body .list-group-item:first-child {
                 border-top: none !important;
             }
             .card-body .list-group-item:last-child {
                  border-bottom: none !important;
             }

            /* CSS to control the link color on hover/focus */
            /* Target the link directly within the list item on hover/focus */
            .card-body .list-group-item:hover a.text-blackish,
            .card-body .list-group-item:focus a.text-blackish,
            .card-body .list-group-item a.text-blackish:hover,
            .card-body .list-group-item a.text-blackish:focus {
                color: #3b3726 !important;
            }

            /* Optional: Adjust the background color of the list item on hover/focus */
            .card-body .list-group-item:hover,
            .card-body .list-group-item:focus {
                 background-color: rgba(0, 0, 0, 0.05) !important; /* Example subtle background */
            }
        </style>
}

@section Scripts {
<!-- Add any necessary scripts here, e.g., for styling or minor interactions -->
}